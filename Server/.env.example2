# Server config
PORT=5001
NODE_ENV=development

# Frontend origin (for CORS)
WEB_ORIGIN=http://localhost:5173

# Secrets / JWT
SECRET=CHANGE_ME
JWT_SECRET=CHANGE_ME

# Cloudinary
CLOUDINARY_CLOUND_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Database (ถ้าใช้ MySQL ผ่าน container ชื่อ db)
DATABASE_URL="mysql://root:your_db_password@db:3306/Ecom_Shirt01"

# หรือถ้าไม่ใช้ container db แต่ใช้ MySQL local บน host:
# DATABASE_URL="mysql://root:your_db_password@host.docker.internal:3306/Ecom_Shirt01"

# Frontend URL (for e.g. password reset links)
FRONTEND_URL=http://localhost:5173

# SMTP for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=your_app_password
EMAIL_FROM="Your Shop <you@example.com>"
